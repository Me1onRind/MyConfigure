{
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
            "filetypes": ["go"]
        },
        "clangd": {
            "command": "clangd",
            "args": ["--background-index"],
            "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
            "filetypes": ["c", "cpp", "objc", "objcpp"]
        }
    },

    "python.pythonPath": "python2",
    "python.linting.pylintArgs": [
        "--disable=C",
        "--disable=E1101",
        "--disable=E0611",
        "--disable=E0401",
        "--disable=W0703",
        "--disable=W0232",
        "--disable=W0231",
        "--disable=R0903",
        "--disable=R0902",
        "--disable=W0312"
    ],
    "java.jdt.ls.vmargs": "-javaagent:/root/.m2/repository/org/projectlombok/lombok/1.18.4/lombok-1.18.4.jar -Xbootclasspath/a:/root/.m2/repository/org/projectlombok/lombok/1.18.4/lombok-1.18.4.jar",
    "java.jdt.ls.home":"/usr/local/src/eclipse.jdt.ls-0.32.0"
}
